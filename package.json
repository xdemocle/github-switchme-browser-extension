{
  "name": "github-switchme-browser-extension",
  "version": "1.0.0",
  "description": "GitHub SwitchMe",
  "repository": "https://github.com/xdemocle/github-switchme-browser-extension.git",
  "author": {
    "name": "xdemocle",
    "email": "hello@rocco.me",
    "url": "https://rocco.me"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "dev:chrome": "wxt -b chrome",
    "dev:opera": "wxt -b opera",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "build:chrome": "wxt build -b chrome",
    "build:opera": "wxt build -b opera",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:chrome": "wxt zip -b chrome",
    "zip:opera": "wxt zip -b opera",
    "compile": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "postinstall": "wxt prepare",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@wxt-dev/auto-icons": "^1.0.2",
    "@wxt-dev/webextension-polyfill": "^1.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "webextension-polyfill": "^0.12.0",
    "wxt": "^0.20.7"
  },
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971"
}